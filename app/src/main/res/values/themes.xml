<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="BaseTheme.Nyaasi.Light" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="BaseTheme.Nyaasi.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:enforceNavigationBarContrast">false</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.Nyaasi" parent="BaseTheme.Nyaasi.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/white</item>
        <item name="android:windowBackground">?android:colorBackground</item>

        <item name="preferenceTheme">@style/Theme.Nyaasi.PreferenceFragment</item>
    </style>

    <style name="Theme.Nyaasi.NoListSelector" parent="Theme.Nyaasi">
        <item name="android:dropDownListViewStyle">@style/Widget.Nyaasi.ListView.DropDown.NoListSelector</item>
    </style>

    <!-- Custom Preference Theme -->
    <style name="Theme.Nyaasi.PreferenceFragment" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="preferenceFragmentCompatStyle">@style/Style.Nyaasi.PreferenceFragment</item>
        <item name="preferenceStyle">@style/Style.Nyaasi.Preference</item>
        <item name="preferenceCategoryStyle">@style/Style.Nyaasi.Preference.Category</item>
    </style>

    <style name="Theme.Nyaasi.CreateTrackerDialog" parent="Theme.Material3.DayNight.Dialog.MinWidth">
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>
</resources>