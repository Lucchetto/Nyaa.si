<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Style.Nyaasi.ReleasePreviewTitle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:maxLines">2</item>
        <item name="android:inputType">none</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Style.Nyaasi.SearchSuggestion" parent="Style.Nyaasi.ReleasePreviewTitle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Style.Nyaasi.ReleasePreviewTitle.Bold" parent="Style.Nyaasi.ReleasePreviewTitle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Nyaasi.ReleasePreviewDate" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.Nyaasi.ReleaseTitle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.Nyaasi.Title.Secondary" parent="TextAppearance.Nyaasi.ReleaseTitle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Nyaasi.ReleaseId" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.Nyaasi.ReleaseDataTitle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">?android:textColorTertiary</item>
    </style>

    <style name="TextAppearance.Nyaasi.ReleaseDataValue" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.Nyaasi.Details" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.Nyaasi.ReleaseTrackerSheet.Title" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ReleaseTrackerSheet"/>

    <style name="ReleaseTrackerSheet.Mode">
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="TextAppearance.Nyaasi.TrackerType" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.Nyaasi.ReleaseTrackerSheet.ModeTitle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.Nyaasi.ReleaseTrackerSheet.ModeDescription" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorTertiary</item>
    </style>

    <style name="Style.Nyaasi.Credits.Text" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:autoLink">all</item>
        <item name="android:maxWidth">300dp</item>
    </style>

    <style name="Theme.Nyaasi.ReleaseActionButton">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="tint">?android:textColorPrimary</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="Theme.Nyaasi.ReleaseDataItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/vertical_spacer_small</item>
        <item name="android:layout_marginEnd">@dimen/vertical_spacer_small</item>
        <item name="android:layout_marginTop">@dimen/vertical_spacer_small</item>
    </style>

    <style name="Style.Nyaasi.NewReleasesCounter"  parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/new_releases_counter_text_size</item>
        <item name="android:minWidth">@dimen/new_releases_counter_view_size</item>
        <item name="android:layout_height">@dimen/new_releases_counter_view_size</item>
        <item name="android:paddingTop">@dimen/new_releases_counter_top_padding</item>
        <item name="android:paddingBottom">@dimen/new_releases_counter_bottom_padding</item>
        <item name="android:paddingLeft">@dimen/new_releases_counter_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/new_releases_counter_horizontal_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/new_releases_counter_bg</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:scrollbars">none</item>
    </style>
    
    <style name="TextAppearance.Spinner.Title" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="TextAppearance.Nyaasi.CommentContent" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Style.EmptyView.Text" parent="TextAppearance.AppCompat">
        <item name="android:textSize">15sp</item>
        <item name="android:maxWidth">300dp</item>
        <item name="android:textColor">?android:textColorTertiary</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="TitledSpinner">
        <item name="android:clickable">true</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <style name="Style.Nyaasi.Preference.Category" parent="@style/Preference.Category.Material">
    </style>

    <style name="Style.Nyaasi.Preference" parent="@style/Preference.Material">
    </style>

    <!-- Custom Style for PreferenceFragmentCompat -->
    <style name="Style.Nyaasi.PreferenceFragment" parent="@style/PreferenceFragment.Material">
        <item name="android:layout">@layout/pref_screen</item>
    </style>

    <style name="Widget.Nyaasi.ListView.DropDown.NoListSelector" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@android:color/transparent</item>
    </style>

    <style name="Widget.Nyaasi.AppBarLayout" parent="Widget.Material3.AppBarLayout">
        <item name="liftOnScroll">false</item>
        <item name="statusBarForeground">?colorSurface</item>
    </style>

    <style name="Widget.Nyaasi.NavigationRailView" parent="Widget.Material3.NavigationRailView">
        <item name="elevation">@dimen/m3_sys_elevation_level2</item>
    </style>
</resources>