<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:interpolator="@android:interpolator/fast_out_slow_in"
    android:shareInterpolator="true"
    android:duration="@integer/suggestions_container_animation_length">

    <alpha
        android:fromAlpha="0"
        android:toAlpha="1"/>

    <scale
        android:pivotX="50%"
        android:pivotY="50%"
        android:fromXScale="0.925"
        android:fromYScale="0.925"
        android:toXScale="1"
        android:toYScale="1"/>
</set>