<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="10dp"
    android:paddingHorizontal="16dp"
    android:clickable="true"
    android:background="?selectableItemBackground">

    <TextView
        android:id="@+id/username_or_tracker_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/Style.Nyaasi.ReleasePreviewTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="@id/username"
        app:layout_constraintEnd_toStartOf="@id/new_releases_counter"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Username or tracker title" />

    <!-- used for search query trackers -->
    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/username_or_tracker_title"
        app:layout_constraintStart_toStartOf="@id/username_or_tracker_title"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintEnd_toEndOf="@id/username_or_tracker_title"
        android:textAppearance="@style/TextAppearance.Nyaasi.ReleasePreviewDate"
        tools:text="User Whatever"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/new_releases_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/username"
        android:visibility="gone"
        style="@style/Style.Nyaasi.NewReleasesCounter"
        tools:text="69"
        tools:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>