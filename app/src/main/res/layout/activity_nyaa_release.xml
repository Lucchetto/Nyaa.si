<?xml version="1.0" encoding="utf-8"?>
<com.revengeos.revengeui.widget.BounceNestedScrollView
    android:id="@+id/scroll_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".NyaaReleaseActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/release_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Nyaasi.ReleaseTitle"
            android:breakStrategy="simple"
            tools:text="Release title, may be very long or short" />

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/release_extra_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:flexWrap="wrap">

            <com.zhenxiang.nyaasi.view.ReleaseDataItemView
                android:id="@+id/release_date"
                style="@style/Theme.Nyaasi.ReleaseDataItem"
                app:title="Release date"
                tools:value="Random date"/>

            <com.zhenxiang.nyaasi.view.ReleaseDataItemView
                android:id="@+id/seeders"
                style="@style/Theme.Nyaasi.ReleaseDataItem"
                app:title="Seeders"
                tools:value="15"/>

            <com.zhenxiang.nyaasi.view.ReleaseDataItemView
                android:id="@+id/leechers"
                style="@style/Theme.Nyaasi.ReleaseDataItem"
                app:title="Leechers"
                tools:value="69"/>

            <com.zhenxiang.nyaasi.view.ReleaseDataItemView
                android:id="@+id/completed"
                style="@style/Theme.Nyaasi.ReleaseDataItem"
                app:title="Completed"
                tools:value="420"/>
        </com.google.android.flexbox.FlexboxLayout>

        <br.tiagohm.markdownview.MarkdownView
            android:id="@+id/release_details_markdown"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <FrameLayout
            android:id="@+id/progress_frame"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
        </FrameLayout>
    </LinearLayout>
</com.revengeos.revengeui.widget.BounceNestedScrollView>